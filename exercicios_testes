/*# Versão 001*/
programa {
    funcao inicio ()
    {
        real a, b, multi
        
        escreva("digite dois números para multiplicação: ")
        leia(a)
        leia(b)

        multi = a * b 

        escreva("resultado da multiplicação: ", multi)    
    }
}

