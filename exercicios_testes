programa {
	funcao inicio() {
		
		inteiro a, b
		
		escreva("Digite dois números: ")
		leia (a)
		leia (b)
		
	    se(a == b)
	        escreva("Os números são iguais")
        se(a > b)
            escreva(a, " é maior que ", b)
        se(b > a)
            escreva(b, " é maior que ", a)    
	}
}

/*Elabore um algoritmo que receba dois numeros pelo teclado e compare se os numeros são:
- iguais
- A < B 
- B < A 
E informe o usuário. 
*/

