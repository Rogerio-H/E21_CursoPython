programa {
	funcao inicio() {
		inteiro base, altura, area
		
		escreva("Informe a base do retângulo em centimetros: ")
		leia (base)
		
		escreva("Informe a altura do retângulo em centimetros: ")
		leia(altura)
		
		area = base * altura
		
		escreva("A area do retângulo é: ", area, "cm")
		
	}
}

